<%= form_with(model: Tours, local: true, :html => {multipart: true}) do |form| %>

  <h2 align="center">New Tour Creation</h2>
  <div class="form-group">
    <%= form.label 'TourId' %><br />
    <%= form.text_field :id, autofocus: true, autocomplete: "name", :class=> "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label 'Name' %><br />
    <%= form.text_field :name, autofocus: true, autocomplete: "name", :class=> "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label 'description' %><br />
    <%= form.text_field :description, autofocus: true, autocomplete: "name", :class=> "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label 'Size' %><br />
    <%= form.text_field :size, autofocus: true, autocomplete: "name", :class=> "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label 'price' %><br />
    <%= form.select(:price, Property.basements.keys, {}, { :class=> "form-control" })%>
  </div>

  <div class="form-group">
    <%= form.label 'Start Date' %><br />
    <%= form.select(:start_date, Property.floors.keys, {}, { :class=> "form-control" })%>
  </div>

  <div class="form-group">
    <%= form.label 'End Date' %><br />
    <%= form.select(:end_date, Property.styles.keys, {}, {:class=> "form-control"})%>
  </div>

  <div class="form-group">
    <%= form.label 'Start Location' %><br />
    <%= form.select(:start_location, Property.styles.keys, {}, {:class=> "form-control"})%>
  </div>

  <div class="form-group">
    <%= form.label 'Operator Contact' %><br />
    <%= form.select(:operator_contact, Property.styles.keys, {}, {:class=> "form-control"})%>
  </div>

  <div class="form-group">
    <%= form.label 'Status' %><br />
    <%= form.select(:status, Property.styles.keys, {}, {:class=> "form-control"})%>
  </div>

  <div class="form-group">
    <%= form.file_field :image %>
  </div>

  <% if tour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# form-control-file %>
  <div class="form-group">
    <%= form.submit :class=> "btn btn-success" %>
    <%= link_to 'Back', properties_path, :class => "btn btn-secondary float-right" %>
  </div>
<% end %>
